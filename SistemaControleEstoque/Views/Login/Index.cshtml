@model LoginModel
@{
    Layout = "_LayoutDeslogado";
    ViewData ["Title"] = "Login";
}

<br />

@if (TempData["MensagemSucesso"] != null)
{
    <div class="d-flex justify-content-center">
        <div class="alert alert-success text-center w-50" role="alert">
            @TempData["MensagemSucesso"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="d-flex justify-content-center">
        <div class="alert alert-danger text-center w-50" role="alert">
            @TempData["MensagemErro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}
<br />

<div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh; margin-top: -100px;">
    <div class="col-12 col-sm-8 col-md-6 col-lg-4 p-3 border rounded shadow">
        <form asp-controller="Login" asp-action="Entrar" method="post">
            <div class="mb-2">
                <label for="login" class="form-label">Login</label>
                <input type="text" asp-for="Login" class="form-control" id="login">
                @Html.ValidationMessageFor(x => x.Login)
            </div>
            <div class="mb-2">
                <label for="senha" class="form-label">Senha</label>
                <input type="password" asp-for="Senha" class="form-control" id="senha">
                @Html.ValidationMessageFor(x => x.Senha)
            </div>

            <p class="mb-3 text-center">
                Esqueceu sua senha?<br>
                <a asp-action="RedefinirSenha" asp-controller="Login" class="text-primary fw-bold">Redefinir minha senha</a>
            </p>

            <button type="submit" class="btn btn-primary w-100">Entrar</button>
        </form>
    </div>
</div>
