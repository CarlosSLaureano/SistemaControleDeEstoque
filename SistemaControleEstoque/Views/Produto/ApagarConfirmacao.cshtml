@model ProdutoModel
@{
    ViewData["Title"] = "Confirmação apagar a produto";
}

<div class="text-center">
    <h3>Realmente deseja apagar o produto(@Model.Nome)?</h3>
</div>

<a class="btn btn-primary w-100" asp-action="Index" asp-controller="Produto" role="button">Cancelar exclusão</a>
<a class="btn btn-danger w-100" asp-action="Apagar" asp-controller="Produto" asp-route-id="@Model.Id" role="button" style="margin-top: 5px;">Confirmar exclusão</a>

